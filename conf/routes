# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Trey
GET         /register                          controllers.AuthenticationController.register()
POST        /register/process                  controllers.AuthenticationController.processRegistration()
GET         /login                             controllers.AuthenticationController.login()
POST        /login/process                     controllers.AuthenticationController.processLogin(destination = null)
POST        /login/process/*destination        controllers.AuthenticationController.processLogin(destination)
GET         /logout                            controllers.AuthenticationController.logout()
GET         /register                          controllers.AuthenticationController.register()
POST        /register/process                  controllers.AuthenticationController.processRegistration()
#GET         /message                          controllers.MessageController.getMessage()
#GET         /assets/javascripts/routes        controllers.MessageController.javascriptRoutes()
GET         /bookings                                   controllers.BookingController.bookings()
GET         /booking-requests                           controllers.BookingController.bookingRequests()
POST        /bookings/cancel                            controllers.BookingController.cancel()
POST        /bookings/complete                          controllers.BookingController.complete()
GET         /bookings/recommend/:bookingId              controllers.BookingController.recommendFlights(bookingId: Long)
POST        /bookings/recommendations/send              controllers.BookingController.sendRecommendations()
GET         /bookings/recommendations/:bookingId        controllers.BookingController.reviewRecommendations(bookingId: Long)
POST        /bookings/recommendations/respond           controllers.BookingController.sendRecommendationResponse()

# Chris stuff
GET         /about                              controllers.MainController.about()
GET         /contact                            controllers.MainController.contact()
POST        /payment                            controllers.BookingController.payment()
POST        /payment/process                    controllers.BookingController.submitPayment()
#POST 	    /luggage/process    			    controllers.BookingController.submitLuggage()
POST        /seat-selection                     controllers.BookingController.seatSelection()
POST        /luggage                            controllers.BookingController.luggage()
#POST        /seat-selection/process             controllers.BookingController.submitSeats()
GET         /restricted                         controllers.TestAuthController.index()
POST        /account/process                    controllers.TestAuthController.processSettings()
GET         /data/selected-flights              controllers.DataController.selectedFlights()
GET         /account                            controllers.TestAuthController.index()

# Brendan Stuff
GET         /                                   controllers.MainController.home()
GET         /data/test                          controllers.DataController.test()
GET         /data/genEdges                      controllers.DataController.genEdges()
