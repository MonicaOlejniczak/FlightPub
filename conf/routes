# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                                 controllers.MainController.home()
GET         /register                         controllers.AuthenticationController.register()
POST        /register/process                 controllers.AuthenticationController.processRegistration()
GET         /login                            controllers.AuthenticationController.login()
POST        /login/process                    controllers.AuthenticationController.processLogin(destination = null)
POST        /login/process/*destination       controllers.AuthenticationController.processLogin(destination)
GET         /logout                           controllers.AuthenticationController.logout()
GET         /hax                              controllers.AuthenticationController.hax()
GET         /restricted                       controllers.TestAuthController.index()
GET         /seatSelection                    controllers.BookingController.seatSelection()
POST        /seatSelection                    controllers.BookingController.seatSelection()
GET         /luggage                          controllers.BookingController.luggage()
POST 		/luggage						  controllers.BookingController.luggage()
GET         /home/process                     controllers.HomeController.processFlights()
#GET         /message                          controllers.MessageController.getMessage()
#GET         /assets/javascripts/routes        controllers.MessageController.javascriptRoutes()
GET         /about                            controllers.MainController.about()
GET         /contact                          controllers.MainController.contact()
GET         /payment                          controllers.BookingController.payment()
POST        /login/process                    controllers.BookingController.submitPayment(destination = null)
POST        /login/process/*destination       controllers.BookingController.submitPayment(destination)

GET         /data/flights                     controllers.DataController.flights()
GET         /processFlights                   controllers.HomeController.processFlights()
GET         /data/selectedFlights             controllers.DataController.selectedFlights()
GET         /data/airlines                    controllers.DataController.airlines()
GET         /data/airports                    controllers.DataController.airports()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)
GET         /webjars/*file                    controllers.WebJarAssets.at(file)
